<%= render Dashboard::Layout.new(active: :dashboard) do %>
  <div class="max-w-sm py-10">
    <%= render Ui::Links::Secondary.new(text: "Tasks", icon: "arrow_left", icon_css: "h-4 w-4", url: dashboard_index_path) %>

    <h1 class="flex items-center gap-3 mt-8 text-gray-800 text-2xl font-medium leading-4">
      <%= @task.title %>
      <%= render_icon "list", classes: "h-7 w-7 text-indigo-600" %>
    </h1>

    <%= render "form", submit_url: dashboard_task_path, cancel_url: dashboard_task_path(@task), method: :put %>
  </div>
<% end %>