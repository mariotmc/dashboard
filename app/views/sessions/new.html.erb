<div class="absolute inset-0 overflow-hidden">
  <img src="/beams.jpg" class="absolute left-1/2 top-0 -ml-[47.5rem] w-[122.5rem] max-w-none">
</div>

<div class="relative flex flex-1 flex-col items-center justify-center h-full pb-16 pt-12">
  <div class="mx-auto mb-10 h-auto w-auto text-slate-900">
    <%= render Company::LogoWithText.new %>
  </div>

  <%= form_with model: @sesh, class: "space-y-6 w-full max-w-sm" do |f| %>

    <%= render UI::Forms::TextField.new(form: f, field: :email, placeholder: "Email", autofocus: true) %>

    <%= render UI::Forms::PasswordField.new(form: f, field: :password, placeholder: "Password") %>

    <% if @sesh.errors.any? {|err| err.attribute == :base} %>
      <ul class="!mt-2 list-disc">
        <% @sesh.errors.full_messages.each do |error| %>
          <li class="list-item ml-4 text-sm text-red-600 font-medium"><%= error %></li>
        <% end %>
      </ul>
    <% end %>

    <%= render UI::Buttons::Submit.new(form: f, text: "Sign in", css: "w-full") %>
  <% end %>

  <p class="mt-10 text-center text-sm leading-6 text-gray-500">
    Don't have an account yet?
    <%= link_to "Sign up", new_registration_path, class: "font-semibold text-indigo-600 transition-colors hover:text-indigo-500" %>
  </p>
</div>
