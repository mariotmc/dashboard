<div class="w-full h-full bg-indigo-50">
  <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-[480px]">
      <div class="flex justify-center mb-10 h-auto w-auto text-slate-900">
        <%= render Company::LogoWithText.new %>
      </div>

      <div class="bg-white px-6 py-12 shadow sm:rounded-lg sm:px-12">
        <div class="sm:mx-auto sm:w-full sm:max-w-md">

          <h2 class="text-center text-2xl font-bold leading-9 tracking-tight text-gray-900">Create an account</h2>
        </div>

        <%= form_with model: @form, url: registrations_path, class: "space-y-6 w-full max-w-sm" do |f| %>
          <%= render UI::Forms::TextField.new(form: f, field: :email, placeholder: "Email", autofocus: true) %>

          <%= render UI::Forms::TextField.new(form: f, field: :username, placeholder: "Username") %>

          <%= render UI::Forms::PasswordField.new(form: f, field: :password, placeholder: "Password") %>

          <% if @form.errors.any? {|err| err.attribute == :base} %>
            <ul class="!mt-2 list-disc">
              <% @form.errors.full_messages.each do |error| %>
                <li class="list-item ml-4 text-sm text-red-600 font-medium"><%= error %></li>
              <% end %>
            </ul>
          <% end %>

          <%= render UI::Buttons::Submit.new(form: f, text: "Sign up", css: "w-full !mt-10") %>
        <% end %>
      </div>

      <p class="mt-10 text-center text-sm leading-6 text-gray-500">
        Already have an account?
        <%= link_to "Sign in", new_sessions_path, class: "font-semibold text-indigo-600 transition-colors hover:text-indigo-500" %>
      </p>
    </div>
  </div>
</div>