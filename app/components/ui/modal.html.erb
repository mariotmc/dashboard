<%= turbo_frame_tag "modal", target: "_top", data: { controller: "modal", action: "click->modal#clickOutside" }, class: "fixed inset-0 flex justify-center items-center w-full h-full bg-gray-500 bg-opacity-75 transition-opacity z-50" do %>
  <div aria-labelled-by="modal" aria-modal="true" role="dialog" class="fixed inset-0 z-50 w-screen overflow-y-auto">
    <div class="flex min-h-full items-center justify-center p-4 text-center sm:items-center sm:p-0">
      <div data-modal-target="content" class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:w-full sm:max-w-2xl p-10">
        <%= content %>

        <button data-action="modal#close" type="button" class="absolute top-6 right-10 rounded-md bg-white text-gray-400 transition-colors hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>
<% end %>