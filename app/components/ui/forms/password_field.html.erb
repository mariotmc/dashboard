<div>
  <div class="flex justify-between">
    <%= form.label field, class: "block text-sm font-medium leading-6 text-gray-900" %>
    <% if optional %>
      <span class="text-sm leading-6 text-gray-500" id="email-optional">Optional</span>
    <% end %>
  </div>
  
  <%= form.password_field field, class: "block mt-1 w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6", placeholder: placeholder, autofocus: autofocus %>

  <% if form.object.errors.include?(field) %>
    <ul class="mt-2 list-disc list-inside">
      <% form.object.errors.full_messages_for(field).each do |error| %>
        <li class="list-item text-sm text-red-600 font-medium"><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
