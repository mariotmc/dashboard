<% if icon %>
  <%= link_to url, data: { turbo_stream: "", turbo_frame: turbo_frame }, class: "flex items-center gap-1.5 w-fit rounded-lg bg-indigo-50 px-2 py-1 text-sm font-semibold text-indigo-600 shadow-sm transition-colors hover:bg-indigo-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 #{css}" do %>
    <%= render_icon icon, classes: icon_css %>
    <% if text %>
      <%= text %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to text, url, data: { turbo_stream: "", turbo_frame: turbo_frame }, class: "flex items-center gap-1.5 w-fit rounded-lg bg-indigo-50 px-2 py-1 text-sm font-semibold text-indigo-600 shadow-sm transition-colors hover:bg-indigo-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 #{css}" %>
<% end %>
