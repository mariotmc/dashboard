<% if icon %>
  <%= link_to url, class: "flex items-center gap-1.5 w-fit rounded-lg bg-indigo-50 px-2 py-1 text-sm font-semibold text-indigo-600 shadow-sm transition-colors hover:bg-indigo-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 #{css}" do %>
    <%= render Ui::Icon.new(icon: icon, css: icon_css) %>
    <% if text %>
      <%= text %>
    <% end %>
  <% end %>
<% else %>
  <%= link_to text, url, class: "flex items-center gap-1.5 w-fit rounded-lg bg-indigo-50 px-2 py-1 text-sm font-semibold text-indigo-600 shadow-sm transition-colors hover:bg-indigo-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 #{css}" %>
<% end %>
