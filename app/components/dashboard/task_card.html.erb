<div class="p-4 rounded-lg shadow">
  <div class="flex justify-between items-center">
    <h3 class="text-gray-800 font-semibold"><%= task.title %></h3>

    <svg class="w-5 h-5 text-gray-500" viewBox="0 0 16 16" fill="currentColor" aria-label="Low Priority">
      <rect x="1" y="8" width="3" height="6" rx="1"></rect>
      <rect x="6" y="5" width="3" height="9" rx="1" fill-opacity="<% if task.priority != "low" %>1<% else %>0.4<% end %>"></rect>
      <rect x="11" y="2" width="3" height="12" rx="1" fill-opacity="<% if task.priority == "high" %>1<% else %>0.4<% end %>"></rect>
    </svg>
  </div>

  <div class="flex items-center justify-evenly">
    <%#= link_to task. %>
  </div>
</div>
